
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
      <a class="navbar-brand" href="#">HackatonBDev</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item ">
            <a class="nav-link" href="#">Home</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="#">Players</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Page Content -->
  <div class="container">

    <div class="row">

      <div class="col-lg-12">

        <br>
        <div id="myBtnContainer">
          <button class="btn btn-primary active" data-filter=""> Show all</button>
        <% @sports.each do |sport| %>
         <button class="btn btn-primary" data-filter="<%sport.sport_Names%>"><%sport.sport_Names%></button>
         <% end %>
        </div>
        <br>
        <div>

          <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search.." title="Type in a ">

        </div>
        <br>

        <div class="row " >
          <div class="filter-gallery">
           <% @athletes.each do |athlete| %>
           <div class="col-lg-3 col-md-4 mb-4 item" data-category="<%=athlete.sport_name%>">
            <div class="card h-100">
              <a >
                <%= image_tag(athlete.image,  class:"card-img-top") %>
              </a>
              <div class="card-body">
                <h4 class="card-title">
                  <a href="#"><%=athlete.name%></a>
                </h4>
                <h5><%=athlete.age%></h5>
                <h4><%=athlete.gender%></h4>
                <h4><%=athlete.sports.sport_name%></h4>
                <p class="card-text"><%=athlete.bio%></p>
              </div>
              <div class="card-footer">
                <small class="text-muted">  <%=athlete.nacionality%></small>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
      <!-- /.row -->

    </div>
    <!-- /.col-lg-9 -->

  </div>
  <!-- /.row -->

</div>
<!-- /.container -->

